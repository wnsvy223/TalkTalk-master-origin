<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/user_single_image1"
        android:layout_toEndOf="@+id/user_single_image1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/user_single_image2"
        android:layout_alignStart="@+id/user_single_image1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toStartOf="@+id/user_group_name"
        android:layout_below="@+id/user_single_image2" />

    <TextView
        android:id="@+id/user_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:maxWidth="150dp"
        android:ellipsize="end"
        android:textSize="15sp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/user_single_image2"
        android:layout_toEndOf="@+id/user_single_image2" />

    <TextView
        android:id="@+id/user_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:maxHeight="20dp"
        android:maxWidth="180dp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/user_single_image4"
        android:layout_alignStart="@+id/user_group_name" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_group_name"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/user_group_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

    <TextView
        android:id="@+id/time_stamp"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/user_last_message"
        android:layout_below="@+id/user_single_online_icon" />

    <TextView
        android:id="@+id/textUserNum"
        android:textSize="15sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:gravity="center|center_vertical"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_single_online_icon"
        android:layout_toStartOf="@+id/time_stamp" />


    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/user_single_image1">

        <TextView
            android:id="@+id/badgecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:maxLines="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="12sp" />

    </FrameLayout>



</RelativeLayout>
