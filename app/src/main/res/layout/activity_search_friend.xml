<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    tools:context="com.example.home.mytalk.Activity.SearchFriendActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:background="#ffffff"
        android:elevation="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/searchText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/outline"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/searchbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:foregroundGravity="center_vertical"
            android:background="@drawable/search_bt_circle"
            android:layout_alignBottom="@+id/searchText"
            android:layout_alignEnd="@+id/searchText"
            android:layout_alignTop="@+id/searchText" />

        <TextView
            android:id="@+id/searchUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:elevation="3dp"
    android:background="#ffffff"
    android:layout_below="@+id/relativeLayout2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFriendList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>



</RelativeLayout>
