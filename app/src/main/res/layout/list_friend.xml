<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#ffffff"
    android:elevation="3dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/front_lay"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="355dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivUser"
            android:background="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvJoinUser"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivUser"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:layout_toEndOf="@+id/ivUser"
            android:layout_below="@+id/tvEmail" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/back_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right|center"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/bt_map"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_location_trace"
            android:layout_centerVertical="true"
            android:layout_marginEnd="100dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:text="위치찾기"
            android:gravity="center"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:textSize="13dp"
            android:text="대화하기"
            android:gravity="center"
            android:layout_marginStart="125dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/textView3" />

        <ImageButton
            android:id="@+id/bt_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:background="@drawable/ic_chat" />



        <ImageButton
            android:id="@+id/bt_q"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/backbutton"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_lay"
        android:layout_marginStart="80dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end|center_vertical"
        android:background="#ffffff">

        <Button
            android:id="@+id/button_disagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="150dp"
            android:background="@drawable/round"
            android:text="거 절" />

        <Button
            android:id="@+id/button_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:background="@drawable/round"
            android:text="수 락" />
    </RelativeLayout>
</FrameLayout>